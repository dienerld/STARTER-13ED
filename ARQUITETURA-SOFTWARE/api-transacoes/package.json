{
	"name": "back-end",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"build": "npx tsc",
		"start": "node ./dist/main/server.js",
		"dev": "ts-node-dev --respawn --transpile-only ./src/main/server.ts",
		"dev:redis": "ts-node-dev --respawn --transpile-only ./src/index.ts",
		"dev:db": "ts-node-dev --respawn --transpile-only ./src/database/test-connection-db.ts",
		"migration:create": "yarn typeorm migration:create ./src/database/migrations/NomeMigration",
		"typeorm": "typeorm-ts-node-commonjs",
		"migration:run": "yarn typeorm migration:run -- -d src/main/config/database.config.ts",
    "test": "jest --silent --noStackTrace --runInBand",
    "test:verbose": "jest --verbose --runInBand --detectOpenHandles",
		"test:coverage": "jest --runInBand --coverage",
		"test:watch": "jest --silent --noStackTrace --runInBand --watchAll"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"cors": "^2.8.5",
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"ioredis": "^5.3.2",
		"pg": "^8.11.2",
		"reflect-metadata": "^0.1.13",
		"typeorm": "^0.3.17"
	},
	"devDependencies": {
		"@types/cors": "^2.8.13",
		"@types/dotenv": "^8.2.0",
		"@types/express": "^4.17.17",
		"@types/jest": "^29.5.5",
		"@types/node": "^20.4.8",
		"@types/pg": "^8.10.2",
		"@types/supertest": "^2.0.12",
		"jest": "^29.7.0",
		"supertest": "^6.3.3",
		"ts-jest": "^29.1.1",
		"ts-node-dev": "^2.0.0",
		"typescript": "^5.1.6"
	}
}
