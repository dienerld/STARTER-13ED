{
  "name": "api-vagas",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "tsnd --respawn --transpile-only ./src/main/index.ts",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:create": "yarn typeorm migration:create ./src/app/shared/migrations/<Nome-Migration>",
    "migration:run": "yarn typeorm migration:run -d ./src/main/config/typeorm.config.ts",
    "migration:revert": "yarn typeorm migration:revert -d ./src/main/config/typeorm.config.ts",
    "test": "cross-env NODE_ENV=test jest --silent --noStackTrace --runInBand",
    "test:verbose": "yarn test --verbose --detectOpenHandles",
    "test:coverage": "yarn test --coverage",
    "test:watch": "yarn test --watchAll",
    "test:integration": "yarn test -c ./jest.config.integration.ts",
    "test:e2e": "yarn test -c ./jest.config.e2e.ts",
    "test:setup": "cross-env NODE_ENV=test yarn migration:run"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.14",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/ioredis-mock": "^8.2.3",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.6.0",
    "@types/supertest": "^2.0.13",
    "ioredis-mock": "^8.8.3",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  }
}
